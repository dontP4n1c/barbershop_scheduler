generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id            Int       @id @default(autoincrement())
  name          String
  email         String    @unique
  phone         String?
  password_hash String
  role          String    @default("client")
  createdAt     DateTime  @default(now())
  appointmentsAsClient Appointment[] @relation("ClientAppointments")
  appointmentsAsBarber Appointment[] @relation("BarberAppointments")
  barberSchedules BarberSchedule[]
  tokens          Token[]
}

model Appointment {
  id         Int      @id @default(autoincrement())
  barber     User?    @relation("BarberAppointments", fields: [barber_id], references: [id])
  barber_id  Int?
  client     User?    @relation("ClientAppointments", fields: [client_id], references: [id])
  client_id  Int?
  date       DateTime
  status     String   @default("scheduled")
  createdAt  DateTime @default(now())
}

model BarberSchedule {
  id              Int     @id @default(autoincrement())
  barber          User    @relation(fields: [barber_id], references: [id])
  barber_id       Int
  date            DateTime
  available_slots String
  blocked_slots   String
  createdAt       DateTime @default(now())
}

model Token {
  id         Int      @id @default(autoincrement())
  token      String   @unique
  type       String
  barber     User?    @relation(fields: [barber_id], references: [id])
  barber_id  Int?
  used       Boolean  @default(false)
  createdAt  DateTime @default(now())
  expiresAt  DateTime?
}
